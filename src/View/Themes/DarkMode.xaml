<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="backgroundColor" Color="#000D4D" />
    <SolidColorBrush x:Key="textColor" Color="WhiteSmoke" />
    <SolidColorBrush x:Key="ButtonColor" Color="#561494" />
    <SolidColorBrush x:Key="ButtonColor2" Color="#ac5af7" />
    <Style TargetType="{x:Type TextBlock}" x:Key="titles">
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style TargetType="{x:Type Button}" x:Key="AverageButton">
        <Setter Property="Height" Value="40px"/>
        <Setter Property="Width" Value="80px"/>
        <Setter Property="Background" Value="#561494" />
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="17px"/>
    </Style>
    <Style TargetType="{x:Type Button}" x:Key="PlayScreenButtons">
        <Setter Property="Height" Value="65px"/>
        <Setter Property="Width" Value="160px"/>
        <Setter Property="Background" Value="#561494" />
        <Setter Property="FontSize" Value="25px"/>
        <Setter Property="Foreground" Value="WhiteSmoke"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
</ResourceDictionary>