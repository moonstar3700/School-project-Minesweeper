<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:local1="clr-namespace:View.Converters"
        xmlns:screens="clr-namespace:View.Screens"
        xmlns:viewmodel="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="MineSweeper" Height="700" Width="1000">
    
    <ContentControl Content="{Binding CurrentScreen.Value}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewmodel:SettingScreenViewModel}">
                <screens:SettingScreen/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodel:PlayScreenViewModel}">
                <screens:PlayScreen/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
    
</Window>
